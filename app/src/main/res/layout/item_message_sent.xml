<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="4dp"
    android:gravity="end"
    android:padding="1dp">

    <LinearLayout
        android:id="@+id/sent_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle_light_purple"
        android:paddingLeft="6dp"
        android:paddingTop="4dp"
        android:paddingRight="6dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/sent_message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:maxWidth="240dp"
            android:minWidth="50dp"
            android:text="PLACEHOLDER" />

        <TextView
            android:id="@+id/sent_message_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:maxWidth="24dp"
            android:minWidth="30dp"
            android:text="00:00"
            android:textSize="11dp" />

        <ImageView
            android:id="@+id/sent_message_sent_indicator"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_check"
            android:tint="@android:color/primary_text_light" />

    </LinearLayout>

</LinearLayout>